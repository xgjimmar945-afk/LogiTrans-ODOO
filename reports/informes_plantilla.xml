<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ACTION REPORTS -->
        <record id="logitrans.report_persona_action" model="ir.actions.report">
            <field name="name">Informe de Personas</field>
            <field name="model">logitrans.persona</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">logitrans.report_persona_template</field>
            <field name="print_report_name">'Informe Personas - %s' % (object.name)</field>
        </record>

        <record id="logitrans.report_conductor_action" model="ir.actions.report">
            <field name="name">Informe de Conductores</field>
            <field name="model">logitrans.conductor</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">logitrans.report_conductor_template</field>
            <field name="print_report_name">'Informe Conductores - %s' % (object.name)</field>
        </record>

        <record id="logitrans.report_administrativo_action" model="ir.actions.report">
            <field name="name">Informe de Administrativos</field>
            <field name="model">logitrans.administrativo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">logitrans.report_administrativo_template</field>
            <field name="print_report_name">'Informe Administrativos - %s' % (object.name)</field>
        </record>

        <!-- TEMPLATES -->

        <!-- Template Informe de Personas -->
        <template id="report_persona_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                                <div class="col-12">
                                    <span style="font-weight: bold; text-decoration: underline;">Persona:</span>
                                    <span style="color: #999999;" t-field="o.name"/>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    <table class="table table-sm table-borderless">
                                        <tbody>
                                            <tr>
                                                <td style="width: 20%;">
                                                    <strong>Nombre:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>DNI:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.dni"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Email:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.email"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Teléfono:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.phone"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Fecha de Nacimiento:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.birthdate" t-field-options='{"format":"dd/MM/yyyy"}'/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Edad:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.age"/> años
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-12" style="text-align: center;">
                                    <hr/>
                                    <p class="text-muted" style="text-align: center; width: 100%;">
                                        <strong>LogiTrans</strong> - Sistema de Gestión Logística<br/>
                                        Documento generado automáticamente
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Template Informe de Conductores -->
        <template id="report_conductor_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                                <div class="col-12">
                                    <span style="font-weight: bold; text-decoration: underline;">Conductor:</span>
                                    <span style="color: #999999;" t-field="o.name"/>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    <table class="table table-sm table-borderless">
                                        <tbody>
                                            <tr>
                                                <td style="width: 20%;">
                                                    <strong>Nombre:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>DNI:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.dni"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Email:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.email"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Teléfono:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.phone"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Estado:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.state"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px; margin-bottom: 10px;">
                                <div class="col-12">
                                    Información de Licencia
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered table-sm">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Tipo de Licencia</th>
                                                <th>Puntos</th>
                                                <th>Fecha Vencimiento</th>
                                                <th>Días para Vencer</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <span t-field="o.type_licencia"/>
                                                </td>
                                                <td>
                                                    <span t-field="o.points_licencia"/>
                                                </td>
                                                <td>
                                                    <span t-field="o.fecha_vencimiento_licencia" t-field-options='{"format":"dd/MM/yyyy"}'/>
                                                </td>
                                                <td>
                                                    <span t-field="o.days_to_expiration"/>
                                                    <t t-if="o.days_to_expiration &lt; 30">
                                                        <span style="color: red;"> ⚠️ PRÓXIMO A VENCER</span>
                                                    </t>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-12" style="text-align: center;">
                                    <hr/>
                                    <p class="text-muted" style="text-align: center; width: 100%;">
                                        <strong>LogiTrans</strong> - Sistema de Gestión Logística<br/>
                                        Documento generado automáticamente
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Template Informe de Administrativos -->
        <template id="report_administrativo_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row" style="font-size: 24px; margin-bottom: 20px;">
                                <div class="col-12">
                                    <span style="font-weight: bold; text-decoration: underline;">Personal Administrativo:</span>
                                    <span style="color: #999999;" t-field="o.name"/>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-12">
                                    <table class="table table-sm table-borderless">
                                        <tbody>
                                            <tr>
                                                <td style="width: 20%;">
                                                    <strong>Nombre:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>DNI:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.dni"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Email:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.email"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <strong>Teléfono:</strong>
                                                </td>
                                                <td>
                                                    <span t-field="o.phone"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row" style="margin-top: 40px; font-weight: bold; font-size: 19px; margin-bottom: 10px;">
                                <div class="col-12">
                                    Información Laboral
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered table-sm">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Departamento</th>
                                                <th>Extensión Telefónica</th>
                                                <th>Nivel de Acceso</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <span t-field="o.departamento"/>
                                                </td>
                                                <td>
                                                    <span t-field="o.extension_telefonica"/>
                                                </td>
                                                <td>
                                                    <span t-field="o.nivel_acceso"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-12" style="text-align: center;">
                                    <hr/>
                                    <p class="text-muted" style="text-align: center; width: 100%;">
                                        <strong>LogiTrans</strong> - Sistema de Gestión Logística<br/>
                                        Documento generado automáticamente
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
