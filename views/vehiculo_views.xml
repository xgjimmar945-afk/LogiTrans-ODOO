<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TREE (lista) -->
    <record id="view_logitrans_vehiculo_tree" model="ir.ui.view">
        <field name="name">logitrans.vehiculo.tree</field>
        <field name="model">logitrans.vehiculo</field>
        <field name="arch" type="xml">
            <tree string="Vehículos">
                <field name="matricula"/>
                <field name="marca"/>
                <field name="modelo"/>
                <field name="anio_fabricacion"/>
                <field name="fecha_matriculacion"/>
                <field name="capacidad_kg"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <!-- FORM (ficha) -->
    <record id="view_logitrans_vehiculo_form" model="ir.ui.view">
        <field name="name">logitrans.vehiculo.form</field>
        <field name="model">logitrans.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Vehículo">
                <sheet>
                    <group>
                        <group>
                            <field name="matricula"/>
                            <field name="marca"/>
                            <field name="modelo"/>

                            <field name="anio_fabricacion"/>
                            <field name="fecha_matriculacion"/>
                            <field name="antiguedad" readonly="1"/>

                        </group>
                        <group>
                            <field name="capacidad_kg"/>
                            <field name="activo"/>
                            <field name="tipo_carga_ids" widget="many2many_tags" />
                        </group>
                        
                    </group>
                    <notebook>
                        <page string="Mantenimientos">
                            <field name="mantenimiento_ids">
                                <tree editable="bottom">
                                    <field name="fecha"/>
                                    <field name="tipo"/>
                                    <field name="coste"/>
                                    <field name="descripcion"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_logitrans_vehiculo" model="ir.actions.act_window">
        <field name="name">Vehículos</field>
        <field name="res_model">logitrans.vehiculo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENÚ -->
    <menuitem id="menu_logitrans_root" name="LogiTrans"/>
    <menuitem id="menu_logitrans_vehiculo" name="Vehículos" parent="menu_logitrans_root" action="action_logitrans_vehiculo"/>
</odoo>