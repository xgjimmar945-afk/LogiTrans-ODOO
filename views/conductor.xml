<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Tree -->
        <record model="ir.ui.view" id="conductor_view_tree">
            <field name="name">conductor.tree</field>
            <field name="model">logitrans.conductor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="type_licencia"/>
                    <field name="points_licencia"/>
                    <field name="fecha_vencimiento_licencia"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- Vista Form -->
        <record model="ir.ui.view" id="conductor_view_form">
            <field name="name">conductor.form</field>
            <field name="model">logitrans.conductor</field>
            <field name="arch" type="xml">
                <form string="Conductores">
                    <header>
                        <button name="action_activar" string="Activar" type="object" class="oe_highlight"/>
                        <button name="action_reserva" string="Poner en Reserva" type="object" class="oe_highlight"/>
                        <button name="action_inactivar" string="Inactivar" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>

                        <button name="logitrans.report_conductor_action" string="Descargar Informe" type="action" class="btn-secondary"/>

                    </header>
                    <sheet layout="auto">
                        <group>
                            <field name="name"/>
                            <field name="dni"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="type_licencia"/>
                            <field name="points_licencia"/>
                        </group>
                        <group>
                            <field name="fecha_vencimiento_licencia"/>
                            <field name="days_to_expiration" readonly="True"/>
                        </group>
                        <group>
                            <field name="birthdate"/>
                            <field name="age"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Vista Kanban -->
        <record model="ir.ui.view" id="conductor_view_kanban">
            <field name="name">conductor.kanban</field>
            <field name="model">logitrans.conductor</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" default_group_by="state">
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="type_licencia"/>
                    <field name="points_licencia"/>
                    <field name="fecha_vencimiento_licencia"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_card_header">
                                    <strong><field name="name"/></strong>
                                </div>
                                <hr/>
                                <div class="o_kanban_card_content">
                                    <div><strong>DNI:</strong> <field name="dni"/></div>
                                    <hr/>
                                    <div><strong>Licencia:</strong> <field name="type_licencia"/></div>
                                    <hr/>
                                    <div><strong>Puntos:</strong> <field name="points_licencia"/></div>
                                    <hr/>
                                    <div><strong>Estado:</strong> <field name="state" widget="badge"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Vista Calendar -->
        <record model="ir.ui.view" id="conductor_view_calendar">
            <field name="name">conductor.calendar</field>
            <field name="model">logitrans.conductor</field>
            <field name="arch" type="xml">
                <calendar string="Calendario Vencimientos" date_start="fecha_vencimiento_licencia" color="type_licencia" mode="month">
                    <field name="name"/>
                    <field name="type_licencia"/>
                </calendar>
            </field>
        </record>


        <!-- Vista Search -->
        <record model="ir.ui.view" id="conductor_view_search">
            <field name="name">conductor.search</field>
            <field name="model">logitrans.conductor</field>
            <field name="arch" type="xml">
                <search string="BÃºsqueda de Conductores">
                    <field name="name" string="Nombre"/>
                    <field name="dni" string="DNI"/>
                    <filter name="activos" string="Activos" domain="[('state','=','activo')]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter name="group_by_estado" string="Por Estado" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- Action -->
        <record model="ir.actions.act_window" id="conductor_action_window">
            <field name="name">Conductores</field>
            <field name="res_model">logitrans.conductor</field>
            <field name="view_mode">tree,form,kanban,calendar,search</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Crear primer conductor</p>
            </field>
        </record>
    </data>
</odoo>
