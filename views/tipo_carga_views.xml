<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE -->
    <record id="view_logitrans_tipo_carga_tree" model="ir.ui.view">
        <field name="name">logitrans.tipo_carga.tree</field>
        <field name="model">logitrans.tipo_carga</field>
        <field name="arch" type="xml">
            <tree string="Tipos de carga">
                <field name="name"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_logitrans_tipo_carga_form" model="ir.ui.view">
        <field name="name">logitrans.tipo_carga.form</field>
        <field name="model">logitrans.tipo_carga</field>
        <field name="arch" type="xml">
            <form string="Tipo de carga">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="activo"/>
                        </group>
                    </group>

                    <group>
                        <field name="descripcion"/>
                        <field name="nota_admin"/>
                    </group>

                    <!-- opcional: ver vehículos relacionados -->
                    <group>
                        <field name="vehiculo_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_logitrans_tipo_carga" model="ir.actions.act_window">
        <field name="name">Tipos de carga</field>
        <field name="res_model">logitrans.tipo_carga</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENÚ -->
    <menuitem id="menu_logitrans_tipo_carga"
              name="Tipos de carga"
              parent="menu_logitrans_root"
              action="action_logitrans_tipo_carga"/>
</odoo>